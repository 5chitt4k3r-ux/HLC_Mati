FROM ubuntu
ARG usuario
RUN apt update && apt install -yq --no-install-recommends \
	nano \
	git curl wget \
	iputils-ping net-tools \
	sudo \
	openssh-server 

# Copiar los scripts
RUN mkdir -p /root/admin/base
WORKDIR /root/admin/base
# 1.-> Relativo al directorio donde se encuentra ubbase 
COPY ./dockerfile/base/admin/ .
COPY ./common/id_rsa.pub /root/admin/base/common/id_rsa.pub
RUN chmod +x /root/admin/base/start.sh


# El primer comando que use el contenedor para mantenerse vivo
# CMD ["tail", "-f", "/dev/null"] 

ENTRYPOINT ["./start.sh"]
